productionVertex :
{
	type = "diffractiveDissVertex";
  beam : {
		name = "pi-";
	};
  target : {
		name = "p+";
	};
};


wave :
{

  XQuantumNumbers :
	{
		isospin =  2;
		G       = -1;
		J       =  2;
		P       = +1;
		C       = +1;
		M       =  2;
		refl    = +1;
	};
  
  XDecay :
	{
		isobars = ({
				name = "sigma";
				fsParticles = ({
						name = "pi-";
					},
					{
						name = "pi+";
					});
				L = 0;
				S = 0;
			  massDep : {
					name = "piPiSWaveAuMorganPenningtonVes";
				};
			});
		L = 2;
		S = 0;
		fsParticles = ({
				name = "pi-";
			});
	};

};


amplitude:
{
	
	formalism = "canonical";
	
};
