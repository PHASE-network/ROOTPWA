productionVertex :
{
	type = "diffractiveDissVertex";
  beam : {
		name = "pi-";
	};
  target : {
		name = "p+";
	};
};


decayVertex :
{

  XQuantumNumbers :
	{
		isospin =  2;
		G       = -1;
		J       =  0;
		P       = -1;
		C       = +1;
		M       =  0;
		refl    = +1;
	};
  
  XDecay :
	{
		isobars = ({
				name = "f0(980)";
				fsParticles = ({
						name = "pi-";
					},
					{
						name = "pi+";
					});
				L = 0;
				S = 0;
			});
		L = 0;
		S = 0;
		fsParticles = ({
				name = "pi-";
			});
	};

};
