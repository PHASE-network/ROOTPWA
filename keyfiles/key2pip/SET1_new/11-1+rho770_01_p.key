productionVertex :	
{		
  type = "diffractiveDissVertex";
 beam : {
    name = "p+";
  };
 target : {
    name = "p+";
  };
};


decayVertex :
{
  
 XQuantumNumbers :
  {
    isospin =  1;
    J       =  1;
    P       = -1;
    M       =  1;
    refl    = +1;
  };
  
 XDecay :
  {
    isobars = ({
	name = "rho(770)";
	fsParticles = ({
	    name = "pi-";
	  },
	  {
	    name = "pi+";
	  });
	L = 2;
	S = 0;
      });
    L = 0;
    S = 1;
    fsParticles = ({
	name = "p+";
      });
  };
  
};


amplitude :
{
  formalism = "canonical";
};
