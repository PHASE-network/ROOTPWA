productionVertex :	
{		
  type = "diffractiveDissVertex";
 beam : {
    name = "p+";
  };
 target : {
    name = "p+";
  };
};


decayVertex :
{
  
 XQuantumNumbers :
  {
    isospin =  1;
    J       =  3;
    P       = -1;
    M       =  1;
    refl    = +1;
  };
  
 XDecay :
  {
    isobars = ({
	name = "Delta(1700)";
	fsParticles = ({
	    name = "p+";
	  },
	  {
	    name = "pi-";
	  });
	L = 4;
	S = 1;
      });
    L = 2;
    S = 3;
    fsParticles = ({
	name = "pi+";
      });
  };
  
};


amplitude :
{
  formalism = "canonical";
};
