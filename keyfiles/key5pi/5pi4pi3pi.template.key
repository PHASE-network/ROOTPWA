//-------------------------------------------------------------------------
//
// Description:
//      wave set generator template key file for decay topology pi- (pi+ (pi- (pi+ pi-)))
//      generated wave set contains 213 waves
//      !NOTE! symmetrization with pi- (pi- (pi+ (pi+ pi-))) mode is
//             performed in amplitude calculation
//
//
// Author List:
//      Sebastian Neubert    TUM            (original author)
//
//
//-------------------------------------------------------------------------


productionVertex :
{
	type = "diffractiveDissVertex";
	beam : {
		name = "pi-";
	};
	target : {
		name = "p+";
	};
};


decayVertex :
{

	XDecay :
	{
		fsParticles = ({
				name  = "pi-";
			});
		isobars = ({
				name        = "isobarA";
				fsParticles = ({
						name  = "pi+";
					});
				isobars = ({
						name        = "isobarB-";
						fsParticles = ({
								name  = "pi-";
							});
						isobars = ({
								name        = "isobarC";
								fsParticles = ({
										name  = "pi+";
									},
									{
										name  = "pi-";
									});
							});
					});
			});
	};

};


waveSetParameters :
{
	// X quantum number ranges
	isospinRange     = [0, 2];
	JRange           = [0, 100];
	MRange           = [0, 2];
	reflectivity     = +1;
	useReflectivity  = true;
	allowSpinExotics = true;

	// X and isobar decay quantum number ranges
	LRange = [0, 4];
	SRange = [0, 100];

@include "5piIsobarWhiteList.key"

};
