// Description:
//      wave set generator template key file for decays (pi+ pi-) (pi+ pi-)
//
//      questionable wave: [0+,1-+,0-]=[f0_980_0=[pi+[0,0]pi-][1,0]sigma0=[pi+[0,0]pi-]].key
//                         not allowed for indistinguishable particles, because L + S has to be even
//
// Author List:
//      Boris Grube          TUM            (original author)
//
//
//-------------------------------------------------------------------------


productionVertex :
{
	type = "diffractiveDissVertex";
  beam : {
		name = "pi-";
	};
  target : {
		name = "p+";
	};
};


decayVertex :
{

  XDecay :
	{
		isobars = ({
				name        = "isobarA";
				fsParticles = ({
						name  = "pi+";
					},
					{
						name  = "pi-";
					});
			},
			{
				name        = "isobarB";
				fsParticles = ({
						name  = "pi+";
					},
					{
						name  = "pi-";
					});
			});
	};

};


waveSetParameters :
{
	// X and isobar quantum number ranges
	isospinRange     = [0, 2];
	JRange           = [0, 100];
	MRange           = [0, 0];
	reflectivity     = 0;
	useReflectivity  = true;
	allowSpinExotics = true;

	// X and isobar decay quantum number ranges
	LRange = [0, 4];
	SRange = [0, 100];

  // allowed 2-pion isobars
	isobarWhiteList =	["sigma0", "rho(770)0", "f0(980)0", "f2(1270)0"];

};
