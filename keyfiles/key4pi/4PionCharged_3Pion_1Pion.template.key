productionVertex :
{
	type = "diffractiveDissVertex";
  beam : {
		name = "pi-";
	};
  target : {
		name = "p+";
	};
};


decayVertex :
{

  XDecay :
	{
		isobars = ({
				name    = "isobarA+";
				isobars = ({
						name        = "isobarB";
						fsParticles = ({
								name  = "pi+";
							},
							{
								name  = "pi-";
							});
					});
				fsParticles = ({
						name  = "pi+";
					});
			});
		fsParticles = ({
				name  = "pi-";
			});
	};

};


waveSetParameters :
{
	// X and isobar quantum number ranges
	isospinRange     = [0, 2];
	JRange           = [0, 100];
	MRange           = [0, 0];
	reflectivity     = 0;
	useReflectivity  = true;
	allowSpinExotics = true;

	// X and isobar decay quantum number ranges
	LRange = [0, 4];
	SRange = [0, 100];

  // allowed isobars
	isobarWhiteList =	[
		 "sigma0", "rho(770)0", "f0(980)0", "f2(1270)0",             // 2-pion isobars
		 "a1(1260)","pi(1300)", "a2(1320)", "pi2(1670)", "pi(1800)"  // 3-pion isobars
		];

};
