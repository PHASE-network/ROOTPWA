productionVertex :
{
	type = "diffractiveDissVertex";
  beam : {
		name = "p+";
	};
  target : {
		name = "p+";
	};
};


wave :
{
  
 XDecay :
  {
    fsParticles = ({
	name        = "p+";
      });
    
    isobars = ({	
	name        = "isobar1";
	fsParticles = ({
	    name  = "pi-";
	  },
	  {
	    name  = "pi+";
	  });
      });
  };
  
};


waveSetParameters :
{
  // X and isobar quantum number ranges
  isospinRange    = [0, 3];
  JRange          = [0, 4];
  MRange          = [0, 1];
  reflectivity    = +1;
  useReflectivity = true;
  
	// X and isobar decay quantum number ranges
  LRange = [0, 4];
  SRange = [0, 4];

  // allowed isobars
  isobarWhiteList       = ["sigma", "rho(770)", "f2(1270)"];
  requireMinIsobarMass  = true;
  isobarMassWindowSigma = 1.;
};
