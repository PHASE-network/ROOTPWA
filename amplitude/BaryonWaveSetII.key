productionVertex :
{
	type = "diffractiveDissVertex";
  beam : {
		name = "p+";
	};
  target : {
		name = "p+";
	};
};


wave :
{
  
 XDecay :
  {
    fsParticles = ({
	name        = "pi+";
      });
    
    isobars = ({	
	name        = "isobar1";
	fsParticles = ({
	    name  = "p+";
	  },
	  {
	    name  = "pi-";
	  });
      });
  };
  
};


waveSetParameters :
{
  // X quantum numbers
  isospinRange    = [1, 3];
  JRange          = [1, 3];
  MRange          = [-1, 1];
  reflectivity    = 0;
  useReflectivity = false;
  allowJpcExotics = false;
  
  // isobar decays
  LRange                = [0, 2];
  SRange                = [0, 6];
  isobarWhiteList       = ["Delta(1232)", "N(1440)", "N(1650)", "Delta(1700)"];
  requireMinIsobarMass  = true;
  isobarMassWindowSigma = 1.;
};
