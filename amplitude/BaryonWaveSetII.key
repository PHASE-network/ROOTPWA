productionVertex :
{
	type = "diffractiveDissVertex";
  beam : {
		name = "p+";
	};
  target : {
		name = "p+";
	};
};


decayVertex :
{
  
 XDecay :
  {
    fsParticles = ({
	name        = "pi+";
      });
    
    isobars = ({	
	name        = "isobar1";
	fsParticles = ({
	    name  = "p+";
	  },
	  {
	    name  = "pi-";
	  });
      });
  };
  
};


waveSetParameters :
{
  // X quantum numbers
  isospinRange    = [0, 3];
  JRange          = [0, 4];
  MRange          = [0, 1];
  reflectivity    = +1;
  useReflectivity = true;
  
  // isobar decays
  LRange                = [0, 4];
  SRange                = [0, 4];
  isobarWhiteList       = ["Delta(1232)", "N(1440)", "N(1650)", "Delta(1700)"];
  requireMinIsobarMass  = true;
  isobarMassWindowSigma = 1.;
};
