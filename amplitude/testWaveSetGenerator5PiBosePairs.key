productionVertex :
{
	type = "diffractiveDissVertex";
 beam : {
		name = "pi-";
	};
 target : {
		name = "p+";
	};
};


decayVertex :
{

 XDecay :
	{
		isobars = ({ 
				name    = "isobarA";
				isobars = ({
						name        = "isobarB";
						fsParticles = ({
								name  = "pi-";
						
							},
							{	
								name  = "pi+";
							});
					},
					{
						name        = "isobarC";
						fsParticles = ({
								name  = "pi-";
							},
							{
								name  = "pi+";
							});
					
					});
			});
		fsParticles = ({
				name  = "pi-";
			});
	};

};


waveSetParameters :
{
	// X and isobar quantum number ranges
	isospinRange     = [0, 2];
	JRange           = [0, 8];
	MRange           = [0, 2];
	reflectivity     = +1;
	useReflectivity  = true;
	allowSpinExotics = true;

	// X and isobar decay quantum number ranges
	LRange = [0, 2];
	SRange = [0, 2];

  // allowed isobars
  //isobarWhiteList       = ["sigma0", "rho(770)0", "f2(1270)0", "rho(1700)0"];
  isobarWhiteList       = ["sigma0", "rho(770)0"];
  requireMinIsobarMass  = true;
  isobarMassWindowSigma = 3.;
};
